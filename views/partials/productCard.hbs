<a href="/product/{{id}}" class="card swiper-slide">
    <div class="card__image-container">
        <img src="{{image}}" alt="{{name}}" class="card__image">
    </div>
    <div class="card__body">
        <h3 class="card__body-title">{{brand}} | {{name}}</h3>
        <p class="card__body-price">$ {{price}}</p>
    </div>  <!-- card-body -->
</a>    <!-- CARD -->